pipeline {
    agent any

    parameters {
        string(nombre: 'NOMBRE_CONTENEDOR', valordefecto: 'mi_contenedor', descripcion: 'Nombre del contenedor')
        choice(elecciones: ['ubuntu', 'nginx', 'mongo', 'redis'], descripcion: 'Selecciona una imagen', nombre: 'IMAGEN')
        string(nombre: 'PUERTO', valordefecto: '8080', descripcion: 'Puerto del contenedor')
    }

    stages {
        stage('Crear contenedor') {
            steps {
                script {
                    def nombrecontenedor = params.NOMBRE_CONTENEDOR
                    def imagen = params.IMAGEN
                    def puerto = params.PUERTO
                    sh "docker run -d --name ${nombrecontenedor} -p ${puerto}:80 ${imagen}:latest tail -f /dev/null"
                }
            }
        }
    }
}
