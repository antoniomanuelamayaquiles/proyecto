pipeline {
    agent any

    parameters {
        string(name: 'CONTAINER_NAME', defaultValue: 'mi_contenedor', description: 'Nombre del contenedor')
        choice(choices: ['ubuntu', 'nginx', 'mongo', 'redis'], description: 'Selecciona la imagen a utilizar', name: 'IMAGEN')
        string(name: 'PUERTO', defaultValue: '8080', description: 'Puerto del contenedor')
    }

    stages {
        stage('Crear contenedor') {
            steps {
                script {
                    def containerName = params.CONTAINER_NAME
                    def image = params.IMAGEN
                    def puerto = params.PUERTO
                    sh "docker run -d --name ${containerName} -p ${puerto}:80 ${image}:latest tail -f /dev/null"
                }
            }
        }
    }
}
