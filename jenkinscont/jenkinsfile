pipeline {
    agent any

    parameters {
        string(name: 'CONTAINER_NAME', defaultValue: 'mi_contenedor', description: 'Nombre del contenedor')
        choice(choices: ['ubuntu', 'nginx', 'mongo', 'redis', 'python'], description: 'Selecciona la imagen a utilizar', name: 'IMAGEN')
    }

    stages {
        stage('Crear contenedor') {
            steps {
                script {
                    def containerName = params.CONTAINER_NAME
                    def image = params.IMAGEN
                    sh "docker create --name ${containerName} ${image}:latest"
                }
            }
        }
    }
}
